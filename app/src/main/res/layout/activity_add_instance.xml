<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- activity_add_instance.xml -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextInstanceDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date (e.g. 2023-10-17)"
            android:inputType="date" />

        <EditText
            android:id="@+id/editTextTeacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teacher"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comments (optional)"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/buttonSaveInstance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Instance" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>